@page
@model BlMadre.Pages.ClientModel
@{
    ViewData["Title"] = "Area_do_Cliente";
    ViewData["PageId"] = "client-area";
}
<div class="container mt-4 mb-5 max-width-500" >
    <h2 class="text-center mb-4">Informe o número de telefone</h2>

    <form method="post" class="text-center mt-4">
        @Html.AntiForgeryToken()

        <div class="form-group d-inline-block text-start">
            <label for="phoneInput">Número de Telefone:</label>
            <input asp-for="Telefone" id="phoneInput" type="text" class="form-control" maxlength="15" placeholder="(XX) XXXX-XXXX" required />
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Enviar</button>
        </div>
    </form>
</div>