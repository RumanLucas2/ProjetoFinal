@page
@model BlMadre.Pages.IndexModel
@{
    ViewData["Title"] = "Busca";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container mt-4 mb-5 max-width-500">
    <h2 class="text-center mb-4">Faça login</h2>

    <form method="post" class="text-center mt-4">
        @Html.AntiForgeryToken()

        <div class="form-group d-inline-block text-start">
            <output class="color-orranged" >@Model.campo</output>
            <br>
            <label asp-for="Entry">Login</label>
            <input asp-for="Entry" class="form-control" placeholder="Login" required/>

            <label asp-for="senha">Password</label>
            <input asp-for="senha" value="@Model.senha" type="password" class="form-control" placeholder="Senha" required/>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Enviar</button>
        </div>
    </form>
</div>


